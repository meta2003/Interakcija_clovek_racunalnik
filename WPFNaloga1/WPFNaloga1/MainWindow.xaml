<Window x:Class="WPFNaloga1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFNaloga1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
       <Window.DataContext>
        <local:AvtoViewModel />
    </Window.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <ListView ItemsSource="{Binding Avtomobili}" SelectedItem="{Binding IzbraniAvto}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Znamka" DisplayMemberBinding="{Binding Znamka}" />
                    <GridViewColumn Header="Model" DisplayMemberBinding="{Binding Model}" />
                    <GridViewColumn Header="Leto" DisplayMemberBinding="{Binding Leto}" />
                    <GridViewColumn Header="Slika">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Slika}" Height="50" Width="80" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Dodaj Avto" Command="{Binding DodajAvtoCommand}" Width="100" Margin="5" />
            <Button Content="Odstrani Avto" Command="{Binding OdstraniAvtoCommand}" Width="100" Margin="5" />
        </StackPanel>
    </Grid>

</Window>
